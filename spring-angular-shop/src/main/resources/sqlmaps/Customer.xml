<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="customerMap">
	
	<resultMap id="customerResultMap" type="com.spring.angular.shop.model.Customer">
		<result property="id" column="id" jdbcType="VARCHAR" />
		<result property="title" column="title" jdbcType="VARCHAR" />
		<result property="firstName" column="first_name" jdbcType="VARCHAR" />
		<result property="lastName" column="last_name" jdbcType="VARCHAR" />
		<result property="email" column="email" jdbcType="VARCHAR" />
		<result property="password" column="password" jdbcType="VARCHAR" />
		<result property="access" column="access" jdbcType="BOOLEAN" />
	</resultMap>

	<select id="getCustomerByEmail" resultMap="customerResultMap">
		SELECT c.id, c.title, c.first_name, c.last_name, c.email, c.password, c.access 
		FROM customer AS c 
		WHERE c.email = #{email}
	</select>
	
	<insert id="addCustomer">
		INSERT INTO customer VALUES 
		(#{id}, #{title}, #{firstName}, #{lastName}, #{email}, #{password}, #{access})
	</insert>

</mapper>