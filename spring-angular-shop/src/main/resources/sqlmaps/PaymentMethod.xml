<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="paymentMethodMap">
	
	<resultMap id="paymentMethodResultMap" type="com.spring.angular.shop.model.PaymentMethod">
		<result property="code" column="code" jdbcType="VARCHAR" />
		<result property="name" column="name" jdbcType="VARCHAR" />
		<result property="description" column="description" jdbcType="VARCHAR" />
	</resultMap>

	<select id="getPaymentMethods" resultMap="paymentMethodResultMap">
		SELECT p.code, p.name, p.description 
		FROM payment_method AS p
		ORDER BY p.code
	</select>
	
	<select id="getPaymentMethod" resultMap="paymentMethodResultMap">
		SELECT p.code, p.name, p.description 
		FROM payment_method AS p
		WHERE p.code = #{code}
	</select>

</mapper>